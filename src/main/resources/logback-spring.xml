<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>src/main/logs/file.log</file> <!-- Путь к целевому log-файлу -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/file-%d{yyyy-MM-dd}.log</fileNamePattern> <!-- Укажите паттерн имени ротируемых файлов -->
            <maxHistory>30</maxHistory> <!-- Количество хранимых архивных файлов -->
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>